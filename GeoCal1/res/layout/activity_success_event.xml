<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/Event_etichetta_SE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Titolo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.google.android.maps.MapView
        android:id="@+id/mapView_SE"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Event_etichetta_SE"
        android:layout_marginTop="9dp"
        android:apiKey="02jbxfKiB6bjOHDCepl1doSKt3tftNBFtHTzUqQ"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >
    </com.google.android.maps.MapView>

    <View
        android:id="@+id/View10"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/mapView_SE"
        android:layout_marginTop="0dp"
        android:background="@color/bg_of_all" />
    <View
        android:id="@+id/View12"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/Event_Raggio_SE"
        android:layout_marginTop="5dp"
        android:background="@color/bg_of_all" />
     <View
        android:id="@+id/View12"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/Event_Ripetizione_SE"
        android:layout_marginTop="5dp"
        android:background="@color/bg_of_all" />

    <View
        android:id="@+id/View11"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/mapView_SE"
        android:background="@color/bg_of_all" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View10"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Raggio"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Event_Raggio_SE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/Event_etichetta_SE"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="28dp"
        android:text="Ripetizione"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Event_Ripetizione_SE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/Event_etichetta_SE"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/View12"
        android:layout_marginTop="24dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>